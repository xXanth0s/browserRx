{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest", "node"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**/*.ts",
    "src/**/__mocks__/**/*.ts"
  ],
  
  "exclude": ["node_modules"]   
} 